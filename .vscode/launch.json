  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Firebase Emulators Start",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "firebase",
        "emulators:start",
        "--project",
        "yarus-shop-firebase"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
